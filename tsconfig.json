{
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "module": "CommonJS",
    "isolatedModules": false,
    "noEmit": false,
    "allowJs": false,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
