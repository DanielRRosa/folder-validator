{
  "name": "folder-validator",
  "description": "A powerful tool to validate and maintain consistent folder structures across your projects",
  "homepage": "https://github.com/danielrrosa/folder-validator",
  "repository": {
    "type": "git",
    "url": "https://github.com/danielrrosa/folder-validator.git"
  },
  "version": "1.0.0",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "folder-validator": "./dist/bin/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "folder:validate": "folder-validator",
    "folder:watch": "folder-validator --watch"
  },
  "keywords": [
    "folder-validator",
    "validator",
    "folder",
    "structure",
    "directory",
    "project-structure",
    "nextjs",
    "react",
    "typescript"
  ],
  "author": "Daniel Rosa",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/node": "^22.13.10",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3"
  }
}
